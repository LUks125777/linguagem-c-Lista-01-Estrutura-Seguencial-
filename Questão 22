#include <stdio.h>

/* 22. Faça um programa que receba o número de lados de um polígono convexo, calcule e mostre o número 
de diagonais desse polígono. Sabe-se que ND = N * (N - 3)/2, em que N é o número de lados do 
polígono.*/

int main() {
    int ladosPoligono, diagonais;
    
    printf("Digite o numero de lados do poligono: ");
    scanf("%d", &ladosPoligono);
    
    diagonais = (ladosPoligono * (ladosPoligono-3))/2;
    
    printf("O numero de diagonais: %d\n", diagonais);
    
    return 0;
}
