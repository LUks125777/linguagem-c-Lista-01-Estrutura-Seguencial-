#include <stdio.h>

/* 23 Faça um programa que receba a medida de dois ângulos de um triângulo, calcule e mostre a medida do 
terceiro ângulo. Sabe-se que a soma dos ângulos de um triângulo é 180 graus.*/

int main() {
    float angulo1, angulo2, angulo3;
    
    printf("Digite o primeiro angulo (menor que 180graus): ");
    scanf("%f", &angulo1);
    printf("Digite o segundo angulo (menor que 180graus): ");
    scanf("%f", &angulo2);
    
    angulo3 = 180 - (angulo1 + angulo2);
    
    printf("A medida do terceiro angulo: %.2f graus\n", angulo3);
    
    return 0;
}
