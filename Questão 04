#include<stdio.h>

int main (){
	
	// 4. Faça um programa que receba duas notas, calcule e mostre a média ponderada dessas notas,
	// considerando peso 2 para a primeira e peso 3 para a segunda ... formula (a*2) + (b*3) / (2+3)
	
	float media1, media2, resp, soma;
	
	printf("\t Media da Nota \n");
	printf("\n");
	printf("Digite a primeira nota: \n");
	scanf ("%f", &media1);
	printf("Digite a segunda nota: \n");
	scanf("%f", &media2);
	printf("\n");
	
	
	resp = (media1*2) + (media2*3) ;
	soma = resp / 5;
	
	printf("Media ponderada: ");
	printf("%.2f",soma);	
	
}
