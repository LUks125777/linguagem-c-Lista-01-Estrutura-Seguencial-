#include<stdio.h>

int main (){

// Faça um programa que receba o valor dos catetos de um triângulo,
// calcule e mostre o valor da hipotenusa.

float cateto1, cateto2, hipotenusa, catetototal;

printf("\t TEOREMA DE PITAGORAS \n ");
printf("Digite o valor do cateto 1 : \n");
scanf("%f", &cateto1);
printf("Digite o valor do cateto 2 : \n");
scanf("%f", &cateto2);

   catetototal = (pow(cateto1,2) + pow(cateto2,2));
   hipotenusa = sqrt(catetototal);

printf("Valor da hipotenusa: \n");
printf("%.2f", hipotenusa);




}
